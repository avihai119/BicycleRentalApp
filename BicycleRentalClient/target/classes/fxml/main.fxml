<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
    <children>
        <Label text="Bicycle Rental System">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <Label text="Main Menu" />

        <VBox alignment="CENTER" spacing="15.0">
            <children>
                <Button fx:id="rentBicycleBtn" mnemonicParsing="false" onAction="#handleRentBicycle" prefWidth="200.0" text="Rent Bicycle" />
                <Button fx:id="viewRentalsBtn" mnemonicParsing="false" onAction="#handleViewRentals" prefWidth="200.0" text="View Active Rentals" />
                <Button fx:id="returnBicycleBtn" mnemonicParsing="false" onAction="#handleReturnBicycle" prefWidth="200.0" text="Return Bicycle" />
                <Button fx:id="exitBtn" mnemonicParsing="false" onAction="#handleExit" prefWidth="200.0" text="Exit" />
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>