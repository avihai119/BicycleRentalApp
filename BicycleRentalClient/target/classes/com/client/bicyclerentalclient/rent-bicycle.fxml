<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RentBicycleController">
    <children>
        <Label text="Rent Bicycle">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="100.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
            <children>
                <Label text="User ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="userIdField" promptText="Enter user ID" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Select Bicycle:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <ComboBox fx:id="bicycleComboBox" promptText="Choose available bicycle" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </children>
        </GridPane>

        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button fx:id="refreshBtn" mnemonicParsing="false" onAction="#handleRefresh" text="Refresh Bicycles" />
            </children>
        </HBox>

        <Label fx:id="statusLabel" text="Ready to rent..." />

        <HBox alignment="CENTER" spacing="15.0">
            <children>
                <Button fx:id="rentBtn" mnemonicParsing="false" onAction="#handleRent" prefWidth="100.0" text="Rent" />
                <Button fx:id="cancelBtn" mnemonicParsing="false" onAction="#handleCancel" prefWidth="100.0" text="Cancel" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>