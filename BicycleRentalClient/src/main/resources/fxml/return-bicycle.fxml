<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ReturnBicycleController">
    <children>
        <Label text="Return Bicycle">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <VBox spacing="10.0">
            <children>
                <RadioButton fx:id="selectFromListRadio" mnemonicParsing="false" selected="true" text="Select from active rentals" />
                <ComboBox fx:id="activeRentalsComboBox" promptText="Choose rental to return" />

                <RadioButton fx:id="enterManuallyRadio" mnemonicParsing="false" text="Enter bicycle ID manually" />
                <GridPane hgap="10.0" vgap="5.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="100.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="150.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                    <children>
                        <Label text="User ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="userIdField" promptText="Enter user ID" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label text="Bicycle ID:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="bicycleIdField" promptText="Enter bicycle ID" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    </children>
                </GridPane>
            </children>
        </VBox>

        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button fx:id="refreshBtn" mnemonicParsing="false" onAction="#handleRefresh" text="Refresh List" />
            </children>
        </HBox>

        <Label fx:id="statusLabel" text="Ready to return bicycle..." />

        <HBox alignment="CENTER" spacing="15.0">
            <children>
                <Button fx:id="returnBtn" mnemonicParsing="false" onAction="#handleReturn" prefWidth="100.0" text="Return" />
                <Button fx:id="cancelBtn" mnemonicParsing="false" onAction="#handleCancel" prefWidth="100.0" text="Cancel" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>